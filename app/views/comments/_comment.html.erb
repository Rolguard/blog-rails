<% unless comment.archived? %>
    <div class="card">
        <div class="card-body">
            <p class="card-title fw-bold mb-1">
                <%= comment.commenter %>
            </p>

            <p class="card-text text-body-secondary">
                <%= comment.body %>
            </p>
            <div>
                <%= link_to "Delete", [comment.article, comment], class: "btn btn-danger", 
                data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                } %>
            </div>
        </div>
    </div>

<% end %>
